<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Short URL Generator</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin-top: 50px;
      background-color: #f8f9fa;
      color: #333;
    }
  
    h1, h2 {
      font-weight: 600;
    }
  
    .container {
      max-width: 960px;
      margin: auto;
    }
  
    .form-label {
      font-weight: 500;
    }
  
    .form-control {
      border-radius: 12px;
      padding: 10px;
      font-size: 1rem;
    }
  
    .btn-primary {
      border-radius: 12px;
      font-weight: 500;
    }
  
    .alert {
      border-radius: 12px;
      font-size: 0.95rem;
    }
  
    table {
      border-collapse: separate;
      border-spacing: 0;
      width: 100%;
      border-radius: 15px;
      overflow: hidden;
      background-color: #fff;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }
  
    thead {
      background-color: #343a40;
      color: #fff;
    }
  
    th, td {
      padding: 16px 18px;
      text-align: center;
      vertical-align: middle;
    }
  
    tbody tr:nth-child(even) {
      background-color: #f1f1f1;
    }
  
    tbody tr:hover {
      background-color: #e8e8e8;
      transition: background-color 0.3s ease;
    }
  
    a {
      text-decoration: none;
      color: #0d6efd;
      word-break: break-word;
    }
  
    .btn-danger {
      border-radius: 8px;
      font-size: 0.85rem;
      padding: 6px 12px;
      font-weight: 500;
      background-color: #e74c3c;
      border: none;
      transition: background-color 0.3s ease;
    }
  
    .btn-danger:hover {
      background-color: #c0392b;
    }
  
  </style>
  
</head>

<body>
    <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-3" role="alert">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
  <div class="container">
    <h1 class="text-center mb-5">ðŸ”— Short URL Generator</h1>

    <form action="/url" method="post" class="row g-3 justify-content-center mb-5">
      <div class="col-md-6">
        <label for="url" class="form-label">Enter URL:</label>
        <input type="text" name="url" id="url" class="form-control" placeholder="http://www.example.com">
      </div>
      <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-success w-100">Generate</button>
      </div>
    </form>

    <% if (typeof id !== 'undefined' && id) { %>
      <div class="alert <%= isNew ? 'alert-success' : 'alert-info' %> text-center">
        <strong>
          <%= isNew ? 'New short URL created:' : 'This URL was already shortened before:' %>
        </strong><br>
        <a href="/url/<%= id %>" target="_blank" class="text-decoration-none">
          http://localhost:3000/url/<%= id %>
        </a>
      </div>
    <% } %>

    <% if (allUrls && allUrls.length > 0) { %>
      <h2 class="text-center mb-4">ðŸ“„ All Generated URLs</h2>
      <div class="table-responsive">
        <table class="table table-bordered table-hover text-center align-middle">
          <thead class="table-dark">
            <tr>
              <th>Original URL</th>
              <th>Short URL</th>
              <th>Analytics</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% allUrls.forEach(url => { %>
              <tr>
                <td>
                  <a href="<%= url.enteredUrl %>" target="_blank"><%= url.enteredUrl %></a>
                </td>
                <td>
                  <a href="/url/<%= url.shortId %>" onclick="setTimeout(() => location.reload(), 1000)">
                    http://localhost:3000/url/<%= url.shortId %>
                  </a>
                </td>
                <td><%= url.vistHistory.length %> visits</td>
                <td>
                  <form action="/url/<%= url.shortId %>/delete?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this URL?');">
                    <button class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </td>
                
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
